<%# App Header - Simple top bar for inner pages %>
<%# Usage: %>
<%# <%= render "shared/app_header", title: "Page Title" %1> %>
<%# <%= render "shared/app_header", title: "Page Title", back_path: some_path %1> %>

<header class="app-header">
  <% if local_assigns[:back_path] %>
    <%= link_to back_path, class: "app-header__back" do %>
      <i class="bi bi-chevron-left"></i>
      <% if local_assigns[:back_label] %>
        <%= back_label %>
      <% end %>
    <% end %>
  <% else %>
    <div></div>
  <% end %>

  <h1 class="app-header__title"><%= local_assigns[:title] || "Finex" %></h1>

  <div class="app-header__actions">
    <% if local_assigns[:actions] %>
      <%= actions %>
    <% else %>
      <%= link_to profile_path, class: "app-header__profile-link", style: "color: #165668; font-size: 1.4rem; text-decoration: none;" do %>
        <i class="bi bi-person-circle"></i>
      <% end %>
    <% end %>
  </div>
</header>
