      <header class="header navbar navbar-expand-lg position-absolute navbar-sticky">
        <div class="container px-3">
          <%= link_to (user_signed_in? ? authenticated_root_path : unauthenticated_root_path), class: "navbar-brand pe-3" do %>
            BaiFinanzas
          <% end %>

          <div class="d-flex align-items-center ms-auto">
            <% if user_signed_in? %>
              <div class="dropdown">
                <a href="#" class="nav-link text-decoration-none d-flex align-items-center" data-bs-toggle="dropdown" aria-expanded="false">
                  <i class="bi bi-person-circle fs-4 me-2"></i>
                  Hola <%= current_user.email %>
                  <i class="bi bi-chevron-down ms-1"></i>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Cerrar sesión", destroy_user_session_path, data: { "turbo-method": :delete }, class: "dropdown-item" %></li>
                </ul>
              </div>
            <% else %>
              <%= link_to "Iniciar sesión", new_user_session_path, class: "btn btn-primary btn-sm fs-sm rounded" %>
            <% end %>
          </div>
        </div>
      </header>
