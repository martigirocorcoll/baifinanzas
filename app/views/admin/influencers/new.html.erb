<% content_for(:page_title, "Nuevo Influencer") %>

<%= link_to admin_influencers_path, class: "btn btn-sm btn-outline-secondary mb-3" do %>
  <i class="bi bi-arrow-left me-1"></i> Volver
<% end %>

<div class="row">
  <div class="col-md-6">
    <div class="card border-0 shadow-sm">
      <div class="card-body">
        <%= form_with(model: [:admin, @influencer]) do |f| %>
          <% if @influencer.errors.any? %>
            <div class="alert alert-danger">
              <ul class="mb-0">
                <% @influencer.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= f.label :name, "Nombre", class: "form-label fw-semibold" %>
            <%= f.text_field :name, class: "form-control", required: true %>
          </div>
          <div class="mb-3">
            <%= f.label :email, "Email", class: "form-label fw-semibold" %>
            <%= f.email_field :email, class: "form-control", required: true %>
          </div>
          <div class="mb-3">
            <%= f.label :password, "Contrasena", class: "form-label fw-semibold" %>
            <%= f.password_field :password, class: "form-control", required: true %>
            <small class="text-muted">Minimo 6 caracteres</small>
          </div>
          <div class="mb-3">
            <%= f.label :password_confirmation, "Confirmar contrasena", class: "form-label fw-semibold" %>
            <%= f.password_field :password_confirmation, class: "form-control", required: true %>
          </div>

          <div class="d-grid gap-2">
            <%= f.submit "Crear Influencer", class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
