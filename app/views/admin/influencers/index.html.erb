<% content_for(:page_title, "Influencers") %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <div>
    <p class="text-muted mb-0">Total: <%= @influencers.count %> influencers</p>
    <% default_inf = @influencers.find(&:default?) %>
    <% if default_inf %>
      <small class="text-success"><i class="bi bi-star-fill"></i> Por defecto: <%= default_inf.name %></small>
    <% else %>
      <small class="text-warning"><i class="bi bi-exclamation-triangle"></i> Sin influencer por defecto</small>
    <% end %>
  </div>
  <%= link_to new_admin_influencer_path, class: "btn btn-primary" do %>
    <i class="bi bi-plus-circle me-1"></i> Nuevo Influencer
  <% end %>
</div>

<div class="card border-0 shadow-sm">
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover mb-0">
        <thead class="table-light">
          <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>Codigo</th>
            <th class="text-center">Usuarios</th>
            <th class="text-center">Enlaces</th>
            <th class="text-end">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% @influencers.each do |influencer| %>
            <tr>
              <td>
                <strong><%= influencer.name %></strong>
                <% if influencer.default? %>
                  <span class="badge bg-success ms-1"><i class="bi bi-star-fill"></i> Defecto</span>
                <% end %>
              </td>
              <td><small><%= influencer.email %></small></td>
              <td><code class="small"><%= influencer.code %></code></td>
              <td class="text-center">
                <span class="badge bg-primary rounded-pill"><%= influencer.users.count %></span>
              </td>
              <td class="text-center">
                <% configured = [influencer.ac_compte, influencer.ac_cdiposit, influencer.ac_curt, influencer.ac_llarg, influencer.ac_deute, influencer.ac_jubil, influencer.ac_fiscal, influencer.ac_portfolio, influencer.ac_saving, influencer.ac_mortgage].compact.reject(&:blank?).count %>
                <span class="badge <%= configured > 0 ? 'bg-success' : 'bg-warning' %> rounded-pill"><%= configured %>/10</span>
              </td>
              <td class="text-end">
                <div class="btn-group btn-group-sm">
                  <%= button_to toggle_default_admin_influencer_path(influencer), method: :post, class: "btn #{influencer.default? ? 'btn-warning' : 'btn-outline-success'}", title: influencer.default? ? "Quitar defecto" : "Marcar defecto", form: { style: 'display:inline;', data: { turbo: false } } do %>
                    <i class="bi bi-star<%= influencer.default? ? '-fill' : '' %>"></i>
                  <% end %>
                  <%= link_to admin_influencer_path(influencer), class: "btn btn-outline-primary" do %>
                    <i class="bi bi-eye"></i>
                  <% end %>
                  <%= link_to edit_admin_influencer_path(influencer), class: "btn btn-outline-secondary" do %>
                    <i class="bi bi-pencil"></i>
                  <% end %>
                  <%= link_to admin_influencer_path(influencer), data: { turbo_method: :delete, turbo_confirm: "Eliminar #{influencer.name}?" }, class: "btn btn-outline-danger" do %>
                    <i class="bi bi-trash"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
