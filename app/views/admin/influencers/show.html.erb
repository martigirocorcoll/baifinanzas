<% content_for(:page_title, "Influencer: #{@influencer.name}") %>

<%= link_to admin_influencers_path, class: "btn btn-sm btn-outline-secondary mb-3" do %>
  <i class="bi bi-arrow-left me-1"></i> Volver
<% end %>

<div class="row g-3">
  <%# Info %>
  <div class="col-md-4">
    <div class="card border-0 shadow-sm">
      <div class="card-header bg-white border-bottom">
        <h6 class="mb-0"><i class="bi bi-person me-1"></i> Informacion</h6>
      </div>
      <div class="card-body">
        <table class="table table-sm mb-0">
          <tr><td class="text-muted">Nombre</td><td><%= @influencer.name %></td></tr>
          <tr><td class="text-muted">Email</td><td><%= @influencer.email %></td></tr>
          <tr><td class="text-muted">Codigo</td><td><code><%= @influencer.code %></code></td></tr>
          <tr><td class="text-muted">Defecto</td><td><%= @influencer.default? ? "Si" : "No" %></td></tr>
          <tr><td class="text-muted">Usuarios</td><td><span class="badge bg-primary"><%= @referred_users_count %></span></td></tr>
        </table>
        <div class="mt-3">
          <%= link_to edit_admin_influencer_path(@influencer), class: "btn btn-sm btn-primary w-100" do %>
            <i class="bi bi-pencil me-1"></i> Editar
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <%# Links %>
  <div class="col-md-4">
    <div class="card border-0 shadow-sm">
      <div class="card-header bg-white border-bottom">
        <h6 class="mb-0"><i class="bi bi-link-45deg me-1"></i> Enlaces Afiliados</h6>
      </div>
      <div class="card-body">
        <% links = { "Cuenta bancaria" => @influencer.ac_compte, "Deposito" => @influencer.ac_cdiposit, "Ahorro" => @influencer.ac_saving, "Deudas" => @influencer.ac_deute, "Hipoteca" => @influencer.ac_mortgage, "Inversion CP" => @influencer.ac_curt, "Inversion LP" => @influencer.ac_llarg, "Jubilacion" => @influencer.ac_jubil, "Portfolio" => @influencer.ac_portfolio, "Fiscal" => @influencer.ac_fiscal } %>
        <% links.each do |name, url| %>
          <div class="d-flex justify-content-between align-items-center mb-1">
            <small><%= name %></small>
            <% if url.present? %>
              <span class="badge bg-success"><i class="bi bi-check"></i></span>
            <% else %>
              <span class="badge bg-secondary">-</span>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <%# Recent referred users %>
  <div class="col-md-4">
    <div class="card border-0 shadow-sm">
      <div class="card-header bg-white border-bottom">
        <h6 class="mb-0"><i class="bi bi-people me-1"></i> Usuarios Referidos</h6>
      </div>
      <div class="card-body">
        <% if @referred_users.any? %>
          <% @referred_users.each do |user| %>
            <div class="d-flex justify-content-between align-items-center mb-2">
              <small><%= user.email.truncate(25) %></small>
              <small class="text-muted"><%= user.created_at.strftime("%d/%m") %></small>
            </div>
          <% end %>
        <% else %>
          <p class="text-muted mb-0 small">Sin usuarios referidos.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
