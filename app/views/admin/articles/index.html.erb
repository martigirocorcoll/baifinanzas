<% content_for(:page_title, "Articulos") %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <p class="text-muted mb-0">Total: <%= @articles.count %> articulos</p>
  <%= link_to new_admin_article_path, class: "btn btn-primary" do %>
    <i class="bi bi-plus-circle me-1"></i> Nuevo Articulo
  <% end %>
</div>

<div class="card border-0 shadow-sm">
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover mb-0">
        <thead class="table-light">
          <tr>
            <th>Titulo</th>
            <th>Slug</th>
            <th>Categoria</th>
            <th class="text-center">Lectura</th>
            <th class="text-center">Estado</th>
            <th>Publicado</th>
            <th class="text-end">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% @articles.each do |article| %>
            <tr>
              <td><strong><%= article.title.truncate(40) %></strong></td>
              <td><code class="small"><%= article.slug %></code></td>
              <td>
                <% cat_colors = { "inversion" => "primary", "ahorro" => "success", "deudas" => "danger", "presupuesto" => "warning", "conceptos" => "info" } %>
                <span class="badge bg-<%= cat_colors[article.category] || 'secondary' %>"><%= article.category %></span>
              </td>
              <td class="text-center"><%= article.read_time %> min</td>
              <td class="text-center">
                <% if article.active? %>
                  <span class="badge bg-success">Activo</span>
                <% else %>
                  <span class="badge bg-secondary">Inactivo</span>
                <% end %>
              </td>
              <td><small><%= article.published_at&.strftime("%d/%m/%Y") %></small></td>
              <td class="text-end">
                <div class="btn-group btn-group-sm">
                  <%= link_to edit_admin_article_path(article), class: "btn btn-outline-primary" do %>
                    <i class="bi bi-pencil"></i>
                  <% end %>
                  <%= link_to admin_article_path(article), data: { turbo_method: :delete, turbo_confirm: "Eliminar articulo '#{article.title}'?" }, class: "btn btn-outline-danger" do %>
                    <i class="bi bi-trash"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
