<% content_for(:page_title, "Noticias") %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <p class="text-muted mb-0">Total: <%= @news.count %> noticias</p>
  <%= link_to new_admin_app_news_path, class: "btn btn-primary" do %>
    <i class="bi bi-plus-circle me-1"></i> Nueva Noticia
  <% end %>
</div>

<div class="card border-0 shadow-sm">
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover mb-0">
        <thead class="table-light">
          <tr>
            <th>Titulo</th>
            <th class="text-center">Estado</th>
            <th>Publicado</th>
            <th class="text-end">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% @news.each do |news_item| %>
            <tr>
              <td>
                <strong><%= news_item.title.truncate(60) %></strong>
                <% if news_item.content.present? %>
                  <br><small class="text-muted"><%= news_item.content.truncate(80) %></small>
                <% end %>
              </td>
              <td class="text-center">
                <% if news_item.active? %>
                  <span class="badge bg-success">Activa</span>
                <% else %>
                  <span class="badge bg-secondary">Inactiva</span>
                <% end %>
              </td>
              <td><small><%= news_item.published_at&.strftime("%d/%m/%Y") %></small></td>
              <td class="text-end">
                <div class="btn-group btn-group-sm">
                  <%= link_to edit_admin_app_news_path(news_item), class: "btn btn-outline-primary" do %>
                    <i class="bi bi-pencil"></i>
                  <% end %>
                  <%= link_to admin_app_news_path(news_item), data: { turbo_method: :delete, turbo_confirm: "Eliminar noticia '#{news_item.title}'?" }, class: "btn btn-outline-danger" do %>
                    <i class="bi bi-trash"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
