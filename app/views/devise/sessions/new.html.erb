<!-- app/views/devise/sessions/new.html.erb -->
<div class="container py-5">
  <h2 class="mb-4 text-center">Inicia sesión</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
        html: { class: "mx-auto", style: "max-width: 400px;" }) do |f| %>
    <%= f.error_notification %>

    <div class="mb-3">
      <%= f.input :email,
            label: "Email",
            input_html: { class: "form-control", autocomplete: "email", placeholder: "usuario@ejemplo.com" },
            label_html: { class: "form-label" },
            wrapper: false %>
    </div>

    <div class="mb-3">
      <%= f.input :password,
            label: "Password",
            input_html: { class: "form-control", autocomplete: "current-password", placeholder: "••••••••" },
            label_html: { class: "form-label" },
            wrapper: false %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-check mb-3">
        <%= f.input :remember_me,
              as: :boolean,
              label: "Remember me",
              input_html: { class: "form-check-input" },
              label_html: { class: "form-check-label" },
              wrapper: false %>
      </div>
    <% end %>

    <div class="d-grid">
      <%= f.button :submit, "Log in", class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>

  <div class="mt-4 text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
