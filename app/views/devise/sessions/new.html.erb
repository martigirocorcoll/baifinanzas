<!-- app/views/devise/sessions/new.html.erb -->
<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-10 col-lg-8 col-xl-6">
      <h2 class="mb-4 text-center"><%= t('views.devise.login.title') %></h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
            html: { class: "mx-auto", style: "max-width: 400px;" }) do |f| %>
        <%= f.error_notification %>

        <div class="mb-3">
          <%= f.input :email,
                label: t('views.devise.login.email'),
                input_html: { class: "form-control", autocomplete: "username", placeholder: "usuario@ejemplo.com" },
                label_html: { class: "form-label" },
                wrapper: false %>
        </div>

        <div class="mb-3">
          <%= f.input :password,
                label: t('views.devise.login.password'),
                input_html: { class: "form-control", autocomplete: "current-password", placeholder: "••••••••" },
                label_html: { class: "form-label" },
                wrapper: false %>
        </div>

        <% if devise_mapping.rememberable? && !turbo_native_app? %>
          <div class="form-check mb-3">
            <%= f.input :remember_me,
                  as: :boolean,
                  label: t('views.devise.login.remember_me'),
                  input_html: { class: "form-check-input" },
                  label_html: { class: "form-check-label" },
                  wrapper: false %>
          </div>
        <% end %>

        <div class="d-grid mb-3">
          <%= f.button :submit, t('views.devise.login.submit'), class: "btn btn-primary btn-lg" %>
        </div>

        <% if devise_mapping.recoverable? %>
          <div class="text-center">
            <%= link_to t('views.devise.login.forgot_password'), new_password_path(resource_name), class: "text-muted small" %>
          </div>
        <% end %>
      <% end %>

      <!-- Separator -->
      <div class="position-relative my-4" style="max-width: 400px; margin: 0 auto;">
        <hr class="my-4">
        <span class="position-absolute top-50 start-50 translate-middle bg-white px-3 text-muted"><%= t('views.devise.login.or_separator') %></span>
      </div>

      <!-- Sign Up CTA (solo para usuarios, no para influencers) -->
      <% if resource_name == :user %>
        <div class="card border-success shadow-sm mx-auto" style="max-width: 400px;">
          <div class="card-body text-center p-4">
            <i class="bi bi-person-plus-fill text-success mb-3" style="font-size: 2.5rem;"></i>
            <h5 class="card-title mb-2"><%= t('views.devise.login.no_account') %></h5>
            <p class="card-text text-muted mb-3">
              <%= t('views.devise.login.no_account_description') %>
            </p>
            <%= link_to new_user_registration_path, class: "btn btn-success btn-lg w-100" do %>
              <i class="bi bi-rocket-takeoff me-2"></i><%= t('views.devise.login.create_free_account') %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
