<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-10 col-lg-8 col-xl-6">
      <h2 class="mb-4 text-center"><%= t('views.devise.password.reset_title') %></h2>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name),
            html: { method: :put, class: "mx-auto", style: "max-width: 400px;" }) do |f| %>
        <%= f.error_notification %>

        <%= f.input :reset_password_token, as: :hidden %>
        <%= f.full_error :reset_password_token %>

        <div class="mb-3">
          <%= f.input :password,
                label: t('views.devise.password.new_password'),
                required: true,
                autofocus: true,
                hint: (t('views.devise.password.new_password_hint', count: @minimum_password_length) if @minimum_password_length),
                input_html: { class: "form-control", autocomplete: "new-password" },
                label_html: { class: "form-label" },
                wrapper: false %>
        </div>

        <div class="mb-3">
          <%= f.input :password_confirmation,
                label: t('views.devise.password.confirm_password'),
                required: true,
                input_html: { class: "form-control", autocomplete: "new-password" },
                label_html: { class: "form-label" },
                wrapper: false %>
        </div>

        <div class="d-grid mb-3">
          <%= f.button :submit, t('views.devise.password.change_submit'), class: "btn btn-primary btn-lg" %>
        </div>

        <div class="text-center">
          <%= link_to t('views.devise.password.back_to_login'), new_session_path(resource_name), class: "text-muted small" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
