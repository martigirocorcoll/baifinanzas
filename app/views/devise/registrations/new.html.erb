<div class="container py-5">
  <h2 class="mb-4 text-center"><%= t('views.devise.register.title') %></h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
        html: { class: "mx-auto", style: "max-width: 500px;" }) do |f| %>
    <%= f.error_notification %>

    <div class="mb-3">
      <%= f.input :email,
            required: true,
            autofocus: true,
            label: t('views.devise.register.email'),
            input_html: { class: "form-control", autocomplete: "email", placeholder: "usuario@ejemplo.com" },
            label_html: { class: "form-label" },
            wrapper: false %>
    </div>

    <div class="mb-3">
      <%= f.input :password,
            required: true,
            hint: (t('views.devise.register.password_hint', count: @minimum_password_length) if @minimum_password_length),
            label: t('views.devise.register.password'),
            input_html: { class: "form-control", autocomplete: "new-password"},
            label_html: { class: "form-label" },
            wrapper: false %>
    </div>

    <div class="mb-3">
      <%= f.input :password_confirmation,
            required: true,
            label: t('views.devise.register.password_confirmation'),
            input_html: { class: "form-control", autocomplete: "new-password" },
            label_html: { class: "form-label" },
            wrapper: false %>
    </div>

    <div class="mb-3">
      <%= f.input :phone,
            label: t('views.devise.register.phone'),
            input_html: { class: "form-control", placeholder: "+34 600 123 456" },
            label_html: { class: "form-label" },
            wrapper: false %>
    </div>

    <div class="mb-4">
      <%= f.input :country,
            label: t('views.devise.register.country'),
            as: :string,
            input_html: { class: "form-control", placeholder: "España, México, ..." },
            label_html: { class: "form-label" },
            wrapper: false %>
    </div>

    <%= f.input :influencer_id,
          as: :hidden,
          input_html: { value: session[:influencer_id] } %>

    <div class="d-grid">
      <%= f.button :submit, t('views.devise.register.submit'), class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>

  <div class="mt-4 text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
