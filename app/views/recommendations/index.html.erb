<% content_for :header do %>
  <header class="app-header">
    <%= link_to home_path, class: "app-header__back" do %>
      <i class="bi bi-chevron-left"></i>
    <% end %>
    <h1 class="app-header__title"><%= t('views.recommendations.all_title', default: 'Recomendaciones') %></h1>
    <div></div>
  </header>
<% end %>

<div class="app-container">
  <!-- Intro text -->
  <div class="app-note mb-3">
    <i class="bi bi-info-circle me-1"></i>
    <%= t('views.recommendations.explore_intro', default: 'Explora todas nuestras recomendaciones financieras.') %>
  </div>

  <!-- Recommendations List -->
  <% @recommendations.each do |recommendation| %>
    <%= link_to recommendation_path(recommendation.slug), class: "app-card d-flex align-items-center text-decoration-none mb-2" do %>
      <div class="me-3">
        <div class="calculator-card__icon">
          <i class="bi <%= recommendation_icon(recommendation.slug) %>"></i>
        </div>
      </div>
      <div class="flex-grow-1 min-width-0">
        <h6 class="mb-1 text-dark"><%= recommendation.title %></h6>
        <p class="mb-0 text-muted small" style="line-height: 1.4;"><%= recommendation.description %></p>
      </div>
      <div class="ms-2 flex-shrink-0">
        <i class="bi bi-chevron-right text-muted"></i>
      </div>
    <% end %>
  <% end %>
</div>
