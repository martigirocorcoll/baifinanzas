<!-- app/views/influencers/edit.html.erb -->
<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <!-- Header -->
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Editar Enlaces y Videos</h2>
        <%= link_to "← Volver al dashboard", influencer_path(@influencer), class: "btn btn-outline-secondary" %>
      </div>

      <!-- Edit Form Card -->
      <div class="card">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0">Configuración de Enlaces y Videos</h5>
        </div>
        <div class="card-body">
          <%= simple_form_for @influencer, url: influencer_path(@influencer), method: :patch do |f| %>
            <h6 class="mb-3 text-primary">Enlaces de Afiliados</h6>

            <div class="mb-3">
              <%= f.input :ac_compte, label: "Cuenta bancaria (better-bank-account)", input_html: { class: "form-control", placeholder: "https://..." } %>
            </div>
            <div class="mb-3">
              <%= f.input :ac_cdiposit, label: "Depósito de emergencia (emergency-deposit)", input_html: { class: "form-control", placeholder: "https://..." } %>
            </div>
            <div class="mb-3">
              <%= f.input :ac_saving, label: "Consejos de ahorro (saving-advice)", input_html: { class: "form-control", placeholder: "https://..." } %>
            </div>
            <div class="mb-3">
              <%= f.input :ac_deute, label: "Optimización de deudas (debt-optimization)", input_html: { class: "form-control", placeholder: "https://..." } %>
            </div>
            <div class="mb-3">
              <%= f.input :ac_mortgage, label: "Optimización de hipoteca (mortgage-optimization)", input_html: { class: "form-control", placeholder: "https://..." } %>
            </div>
            <div class="mb-3">
              <%= f.input :ac_curt, label: "Inversión medio plazo (ac-curt)", input_html: { class: "form-control", placeholder: "https://..." } %>
            </div>
            <div class="mb-3">
              <%= f.input :ac_llarg, label: "Inversión largo plazo (ac-llarg)", input_html: { class: "form-control", placeholder: "https://..." } %>
            </div>
            <div class="mb-3">
              <%= f.input :ac_jubil, label: "Plan de jubilación (ac-jubil)", input_html: { class: "form-control", placeholder: "https://..." } %>
            </div>
            <div class="mb-3">
              <%= f.input :ac_portfolio, label: "Optimización de portfolio (portfolio-optimization)", input_html: { class: "form-control", placeholder: "https://..." } %>
            </div>
            <div class="mb-3">
              <%= f.input :ac_fiscal, label: "Asesoramiento fiscal (tax-advisory)", input_html: { class: "form-control", placeholder: "https://..." } %>
            </div>

            <hr class="my-4">

            <h6 class="mb-3 text-primary">Videos de Recomendación (URLs de YouTube/Vimeo)</h6>

            <div class="mb-3">
              <%= f.input :video_compte, label: "Video cuenta bancaria (better-bank-account)", input_html: { class: "form-control", placeholder: "https://youtube.com/..." } %>
            </div>
            <div class="mb-3">
              <%= f.input :video_cdiposit, label: "Video depósito emergencia (emergency-deposit)", input_html: { class: "form-control", placeholder: "https://youtube.com/..." } %>
            </div>
            <div class="mb-3">
              <%= f.input :video_saving, label: "Video consejos de ahorro (saving-advice)", input_html: { class: "form-control", placeholder: "https://youtube.com/..." } %>
            </div>
            <div class="mb-3">
              <%= f.input :video_deute, label: "Video optimización deudas (debt-optimization)", input_html: { class: "form-control", placeholder: "https://youtube.com/..." } %>
            </div>
            <div class="mb-3">
              <%= f.input :video_mortgage, label: "Video optimización hipoteca (mortgage-optimization)", input_html: { class: "form-control", placeholder: "https://youtube.com/..." } %>
            </div>
            <div class="mb-3">
              <%= f.input :video_curt, label: "Video inversión medio plazo (ac-curt)", input_html: { class: "form-control", placeholder: "https://youtube.com/..." } %>
            </div>
            <div class="mb-3">
              <%= f.input :video_llarg, label: "Video inversión largo plazo (ac-llarg)", input_html: { class: "form-control", placeholder: "https://youtube.com/..." } %>
            </div>
            <div class="mb-3">
              <%= f.input :video_jubil, label: "Video plan jubilación (ac-jubil)", input_html: { class: "form-control", placeholder: "https://youtube.com/..." } %>
            </div>
            <div class="mb-3">
              <%= f.input :video_portfolio, label: "Video optimización portfolio (portfolio-optimization)", input_html: { class: "form-control", placeholder: "https://youtube.com/..." } %>
            </div>
            <div class="mb-3">
              <%= f.input :video_fiscal, label: "Video asesoramiento fiscal (tax-advisory)", input_html: { class: "form-control", placeholder: "https://youtube.com/..." } %>
            </div>

            <div class="d-grid gap-2">
              <%= f.button :submit, "Guardar cambios", class: "btn btn-success btn-lg" %>
              <%= link_to "Cancelar", influencer_path(@influencer), class: "btn btn-outline-secondary btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
