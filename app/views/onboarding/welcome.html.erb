<% content_for :title, t('onboarding.welcome.title') %>
<div class="onboarding-welcome">
  <div class="onboarding-welcome__content">
    <div class="onboarding-welcome__icon">
      <i class="bi bi-graph-up-arrow"></i>
    </div>

    <h1 class="onboarding-welcome__title"><%= t('onboarding.welcome.title') %></h1>

    <p class="onboarding-welcome__desc"><%= t('onboarding.welcome.description') %></p>

    <div class="onboarding-welcome__info">
      <div class="onboarding-welcome__info-item">
        <i class="bi bi-clock"></i>
        <span><%= t('onboarding.welcome.time') %></span>
      </div>
      <div class="onboarding-welcome__info-item">
        <i class="bi bi-shield-check"></i>
        <span><%= t('onboarding.welcome.private') %></span>
      </div>
    </div>

    <%= link_to onboarding_step_path(step_name: 'ingresos'), class: 'btn-app btn-app--primary btn-app--lg btn-app--block' do %>
      <%= t('onboarding.welcome.start') %>
      <i class="bi bi-arrow-right ms-2"></i>
    <% end %>
  </div>
</div>
