<%# Welcome page - no header, full screen %>
<div class="app-container d-flex flex-column justify-content-center" style="min-height: 100vh; padding-bottom: 100px;">
  <div class="text-center">
    <div class="mb-4">
      <span style="font-size: 4rem;">ðŸŽ‰</span>
    </div>

    <h1 class="h3 mb-3"><%= t('onboarding.welcome.title', default: 'Bienvenido a BaiFinanzas!') %></h1>

    <p class="text-muted mb-4">
      <%= t('onboarding.welcome.description',
          default: 'Vamos a crear tu plan financiero personalizado en 2 minutos.') %>
    </p>

    <%# Progress indicator %>
    <div class="d-flex justify-content-center align-items-center gap-2 mb-5">
      <div class="rounded-circle bg-brand" style="width: 10px; height: 10px;"></div>
      <div class="bg-light rounded" style="width: 40px; height: 2px;"></div>
      <div class="rounded-circle bg-light" style="width: 10px; height: 10px;"></div>
      <div class="bg-light rounded" style="width: 40px; height: 2px;"></div>
      <div class="rounded-circle bg-light" style="width: 10px; height: 10px;"></div>
    </div>

    <div class="text-center mb-4">
      <small class="text-muted">
        <i class="bi bi-clock me-1"></i>
        <%= t('onboarding.welcome.time', default: 'Solo 4 preguntas') %>
      </small>
    </div>

    <%= link_to onboarding_basic_path, class: 'btn-app btn-app--primary btn-app--lg btn-app--block' do %>
      <%= t('onboarding.welcome.start', default: 'Empezar') %>
      <i class="bi bi-arrow-right ms-2"></i>
    <% end %>
  </div>
</div>
