<div class="calculators-page">
  <div class="app-container" style="animation: none;">
    <p style="color: rgba(255,255,255,0.7); font-size: 0.875rem; margin-bottom: 1.25rem;">
      <%= t('calculators.description') %>
    </p>

    <% @calculator_categories.each do |category| %>
      <div class="calculator-category">
        <h3 class="calculator-category__title"><%= category[:title] %></h3>

        <% category[:calculators].each do |calculator| %>
          <%= link_to calculator[:path], class: 'calculator-card calculator-card--white' do %>
            <div class="calculator-card__icon calculator-card__icon--unified">
              <i class="<%= calculator[:icon] %>"></i>
            </div>
            <div class="calculator-card__content">
              <h3 class="calculator-card__title"><%= calculator[:title] %></h3>
              <p class="calculator-card__description"><%= calculator[:description] %></p>
            </div>
            <i class="bi bi-chevron-right calculator-card__arrow"></i>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
