<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
  <head>
    <title><%= content_for(:title) || "Finex" %></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover, maximum-scale=1, user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="default">
    <meta name="theme-color" content="#165668">
    <% if turbo_native_app? %>
      <meta name="turbo-native" content="true">
    <% end %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="manifest" href="/manifest.json">
    <link rel="icon" href="/icons/icon-512x512.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icons/icon-512x512.png">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="app-layout<%= ' turbo-native' if turbo_native_app? %>">
    <%# App Header - only show if content_for(:header) is provided AND not in Turbo Native %>
    <% if content_for?(:header) && !turbo_native_app? %>
      <%= yield :header %>
    <% end %>

    <%# Flash messages %>
    <%= render "shared/flashes" %>

    <%# Main content %>
    <main class="app-main">
      <%= yield %>
    </main>

    <%# Bottom Navigation - Tab Bar (hidden in Turbo Native, native app has its own) %>
    <% unless turbo_native_app? %>
      <%= render "shared/bottom_nav" %>
    <% end %>

    <%# Tooltip system %>
    <script>
    (function() {
      function initTooltips() {
        document.addEventListener('click', function(e) {
          var trigger = e.target.closest('.tooltip-trigger');
          if (trigger) {
            e.preventDefault();
            e.stopPropagation();
            closeTooltip();
            var text = trigger.dataset.tooltip;
            if (!text) return;
            var overlay = document.createElement('div');
            overlay.className = 'tooltip-overlay';
            overlay.addEventListener('click', closeTooltip);
            var popup = document.createElement('div');
            popup.className = 'tooltip-popup';
            popup.innerHTML = '<p class="tooltip-popup__text">' + text + '</p>' +
              '<button class="tooltip-popup__close" type="button"><%= j t("common.understood", default: "Entendido") %></button>';
            popup.querySelector('.tooltip-popup__close').addEventListener('click', closeTooltip);
            document.body.appendChild(overlay);
            document.body.appendChild(popup);
            trigger.classList.add('active');
          }
        });
      }
      function closeTooltip() {
        var overlay = document.querySelector('.tooltip-overlay');
        var popup = document.querySelector('.tooltip-popup');
        var active = document.querySelector('.tooltip-trigger.active');
        if (overlay) overlay.remove();
        if (popup) popup.remove();
        if (active) active.classList.remove('active');
      }
      document.addEventListener('turbo:load', initTooltips);
      if (document.readyState !== 'loading') { initTooltips(); }
    })();
    </script>
  </body>
</html>
