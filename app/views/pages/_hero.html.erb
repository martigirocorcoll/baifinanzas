      <!-- Hero -->
      <section class="overflow-hidden pt-5 position-relative" style="background: linear-gradient(135deg, rgba(22, 86, 104, 0.06) 0%, rgba(22, 86, 104, 0.02) 50%, rgba(255, 255, 255, 0) 100%);">

        <div class="container pt-3 pt-sm-4 pt-xl-5 position-relative" style="z-index: 2;">
          <div class="row pt-md-2 pt-lg-5">
            <div class="col-md-6 d-flex flex-column mt-md-4 pt-5 pb-3 pb-sm-4 py-md-5">
              <h1 class="display-4 text-center text-md-start mb-4">
                <%= t('views.landing.hero.title_html').html_safe %>
              </h1>
              <p class="fs-lg text-center text-md-start pb-2 pb-md-3 mb-4"><%= t('views.landing.hero.subtitle') %></p>

              <%# App Store badges %>
              <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center justify-content-md-start mb-4">
                <a href="#" class="d-inline-block" aria-label="App Store">
                  <div class="d-flex align-items-center bg-dark text-white rounded-3 px-4 py-2">
                    <i class="bi bi-apple fs-3 me-2"></i>
                    <div>
                      <small class="d-block lh-1" style="font-size: 0.65rem;"><%= t('views.landing.hero.download_on', default: 'Descargar en') %></small>
                      <span class="fw-semibold">App Store</span>
                    </div>
                  </div>
                </a>
                <a href="#" class="d-inline-block" aria-label="Google Play">
                  <div class="d-flex align-items-center bg-dark text-white rounded-3 px-4 py-2">
                    <i class="bi bi-google-play fs-3 me-2"></i>
                    <div>
                      <small class="d-block lh-1" style="font-size: 0.65rem;"><%= t('views.landing.hero.get_it_on', default: 'Disponible en') %></small>
                      <span class="fw-semibold">Google Play</span>
                    </div>
                  </div>
                </a>
              </div>

              <div class="d-flex align-items-center justify-content-center justify-content-md-start gap-4 mt-auto pt-3">
                <div class="d-flex align-items-center">
                  <i class="bi bi-shield-check me-2" style="color: #165668;"></i>
                  <small class="text-muted"><%= t('views.landing.hero.badge_free', default: '100% gratis') %></small>
                </div>
                <div class="d-flex align-items-center">
                  <i class="bi bi-lock me-2" style="color: #165668;"></i>
                  <small class="text-muted"><%= t('views.landing.hero.badge_secure', default: 'Datos seguros') %></small>
                </div>
                <div class="d-flex align-items-center">
                  <i class="bi bi-clock me-2" style="color: #165668;"></i>
                  <small class="text-muted"><%= t('views.landing.hero.badge_quick', default: '2 min setup') %></small>
                </div>
              </div>
            </div>

            <div class="col-md-6 align-self-center">
              <div class="text-center p-4">
                <%# Phone mockup with app screenshots %>
                <div class="phone-mockup mx-auto">
                  <div class="phone-mockup__frame">
                    <div class="phone-mockup__screen">
                      <div class="phone-mockup__content">
                        <%# Mini dashboard preview %>
                        <div class="p-3">
                          <div class="d-flex align-items-center mb-3">
                            <div class="rounded-circle bg-white d-flex align-items-center justify-content-center" style="width: 36px; height: 36px;">
                              <i class="bi bi-person-fill" style="color: #165668;"></i>
                            </div>
                            <div class="ms-2">
                              <small class="text-white fw-semibold d-block lh-1">Finex</small>
                              <small class="text-white-50" style="font-size: 0.7rem;">Tu plan financiero</small>
                            </div>
                          </div>

                          <div class="bg-white rounded-3 p-2 mb-2">
                            <div class="d-flex align-items-center justify-content-between mb-1">
                              <small class="fw-semibold" style="font-size: 0.7rem; color: #165668;">Nivel financiero</small>
                              <span class="badge" style="font-size: 0.6rem; background: #165668;">4/6</span>
                            </div>
                            <div class="progress" style="height: 4px;">
                              <div class="progress-bar" style="width: 67%; background: #165668;"></div>
                            </div>
                          </div>

                          <div class="bg-white rounded-3 p-2 mb-2">
                            <small class="fw-semibold d-block mb-1" style="font-size: 0.7rem; color: #165668;">Plan de accion</small>
                            <div class="d-flex align-items-center mb-1">
                              <i class="bi bi-check-circle-fill text-success me-1" style="font-size: 0.65rem;"></i>
                              <small class="text-muted" style="font-size: 0.65rem;">Fondo de emergencia</small>
                            </div>
                            <div class="d-flex align-items-center mb-1">
                              <i class="bi bi-circle text-muted me-1" style="font-size: 0.65rem;"></i>
                              <small class="text-muted" style="font-size: 0.65rem;">Empezar a invertir</small>
                            </div>
                            <div class="d-flex align-items-center">
                              <i class="bi bi-circle text-muted me-1" style="font-size: 0.65rem;"></i>
                              <small class="text-muted" style="font-size: 0.65rem;">Optimizar hipoteca</small>
                            </div>
                          </div>

                          <div class="bg-white rounded-3 p-2">
                            <small class="fw-semibold d-block mb-1" style="font-size: 0.7rem; color: #165668;">Objetivos</small>
                            <div class="d-flex align-items-center justify-content-between">
                              <small class="text-muted" style="font-size: 0.65rem;"><i class="bi bi-house me-1"></i>Entrada piso</small>
                              <small style="font-size: 0.65rem; color: #165668;">45%</small>
                            </div>
                            <div class="progress mb-1" style="height: 3px;">
                              <div class="progress-bar" style="width: 45%; background: #165668;"></div>
                            </div>
                          </div>
                        </div>

                        <%# Bottom nav preview %>
                        <div class="phone-mockup__nav">
                          <div class="d-flex justify-content-around align-items-center py-1">
                            <div class="text-center">
                              <i class="bi bi-house-fill d-block" style="font-size: 0.8rem; color: #165668;"></i>
                              <small style="font-size: 0.5rem; color: #165668;">Home</small>
                            </div>
                            <div class="text-center text-muted">
                              <i class="bi bi-play-circle d-block" style="font-size: 0.8rem;"></i>
                              <small style="font-size: 0.5rem;">Discovery</small>
                            </div>
                            <div class="text-center text-muted">
                              <i class="bi bi-calculator d-block" style="font-size: 0.8rem;"></i>
                              <small style="font-size: 0.5rem;">Calc</small>
                            </div>
                            <div class="text-center text-muted">
                              <i class="bi bi-person d-block" style="font-size: 0.8rem;"></i>
                              <small style="font-size: 0.5rem;">Perfil</small>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <%= render "pages/brands" %>

      </section>

      <!-- Phone Mockup CSS -->
      <style>
        .phone-mockup {
          max-width: 260px;
        }
        .phone-mockup__frame {
          background: #1a1a1a;
          border-radius: 2rem;
          padding: 0.75rem;
          box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
        }
        .phone-mockup__screen {
          background: #165668;
          border-radius: 1.4rem;
          overflow: hidden;
        }
        .phone-mockup__content {
          min-height: 340px;
          display: flex;
          flex-direction: column;
          justify-content: space-between;
        }
        .phone-mockup__nav {
          background: #fff;
          border-top: 1px solid #eee;
        }

        @media (max-width: 767.98px) {
          .phone-mockup {
            max-width: 200px;
          }
          .phone-mockup__content {
            min-height: 280px;
          }
        }
      </style>
