      <!-- Objetivos Financieros -->
      <section class="container pt-5 pb-2 pb-md-3 py-lg-5">
        <div class="text-center mb-5">
          <h2 class="h1 mb-4"><%= t('views.landing.goal_examples.title') %></h2>
          <p class="fs-lg text-muted"><%= t('views.landing.goal_examples.subtitle') %></p>
        </div>

        <!-- Grid de objetivos -->
        <div class="row g-4 mb-5 justify-content-center">
          <!-- Objetivo 1: Eliminar deudas -->
          <div class="col-md-6 col-lg-3">
            <%= link_to "#", class: "text-decoration-none" do %>
              <div class="card h-100 border-0 shadow-sm landing-goal-card">
                <div class="card-body text-center p-4">
                  <div class="rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px; background-color: rgba(22, 86, 104, 0.1);">
                    <i class="bi bi-scissors fs-3" style="color: #165668;"></i>
                  </div>
                  <h4 class="h5 mb-3 text-dark"><%= t('views.landing.goal_examples.goals.debt_free.title') %></h4>
                  <p class="text-muted mb-0"><%= t('views.landing.goal_examples.goals.debt_free.description') %></p>
                </div>
              </div>
            <% end %>
          </div>

          <!-- Objetivo 2: Empezar a invertir -->
          <div class="col-md-6 col-lg-3">
            <%= link_to "#", class: "text-decoration-none" do %>
              <div class="card h-100 border-0 shadow-sm landing-goal-card">
                <div class="card-body text-center p-4">
                  <div class="rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px; background-color: rgba(22, 86, 104, 0.1);">
                    <i class="bi bi-graph-up-arrow fs-3" style="color: #165668;"></i>
                  </div>
                  <h4 class="h5 mb-3 text-dark"><%= t('views.landing.goal_examples.goals.start_investing.title') %></h4>
                  <p class="text-muted mb-0"><%= t('views.landing.goal_examples.goals.start_investing.description') %></p>
                </div>
              </div>
            <% end %>
          </div>

          <!-- Objetivo 3: Pagar hipoteca -->
          <div class="col-md-6 col-lg-3">
            <%= link_to "#", class: "text-decoration-none" do %>
              <div class="card h-100 border-0 shadow-sm landing-goal-card">
                <div class="card-body text-center p-4">
                  <div class="rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px; background-color: rgba(22, 86, 104, 0.1);">
                    <i class="bi bi-speedometer2 fs-3" style="color: #165668;"></i>
                  </div>
                  <h4 class="h5 mb-3 text-dark"><%= t('views.landing.goal_examples.goals.pay_mortgage.title') %></h4>
                  <p class="text-muted mb-0"><%= t('views.landing.goal_examples.goals.pay_mortgage.description') %></p>
                </div>
              </div>
            <% end %>
          </div>

          <!-- Objetivo 4: Libertad financiera -->
          <div class="col-md-6 col-lg-3">
            <%= link_to "#", class: "text-decoration-none" do %>
              <div class="card h-100 border-0 shadow-sm landing-goal-card">
                <div class="card-body text-center p-4">
                  <div class="rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px; background-color: rgba(22, 86, 104, 0.1);">
                    <i class="bi bi-trophy fs-3" style="color: #165668;"></i>
                  </div>
                  <h4 class="h5 mb-3 text-dark"><%= t('views.landing.goal_examples.goals.financial_freedom.title') %></h4>
                  <p class="text-muted mb-0"><%= t('views.landing.goal_examples.goals.financial_freedom.description') %></p>
                </div>
              </div>
            <% end %>
          </div>
        </div>

      </section>

      <style>
        .landing-goal-card {
          cursor: pointer;
          transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
          opacity: 0;
          transform: translateY(30px);
        }

        .landing-goal-card.animate {
          opacity: 1;
          transform: translateY(0);
          transition: opacity 0.6s ease-out, transform 0.6s ease-out;
        }

        .landing-goal-card:hover {
          transform: translateY(-5px);
          box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15) !important;
        }
      </style>

      <script>
        document.addEventListener('turbo:load', function() {
          const goalCards = document.querySelectorAll('.landing-goal-card');

          const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
              if (entry.isIntersecting) {
                const cards = Array.from(goalCards);
                cards.forEach((card, index) => {
                  setTimeout(() => {
                    card.classList.add('animate');
                  }, index * 150);
                });
                observer.unobserve(entry.target);
              }
            });
          }, {
            threshold: 0.1
          });

          if (goalCards.length > 0) {
            observer.observe(goalCards[0].closest('section'));
          }
        });
      </script>
