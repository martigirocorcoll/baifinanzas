        <%= t('views.landing.cta_final.button') %>
      <% end %>
    </div>
  </div>
</section>

<script>
  document.addEventListener('turbo:load', function() {
    const faqSection = document.querySelector('#faq');
    const firstQuestion = document.querySelector('#q1');
    const firstButton = document.querySelector('[data-bs-target="#q1"]');

    if (faqSection && firstQuestion && firstButton) {
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            // Auto-open first FAQ
            if (!firstQuestion.classList.contains('show')) {
              firstButton.click();
            }
            observer.unobserve(entry.target);
          }
        });
      }, {
        threshold: 0.3
      });

      observer.observe(faqSection);
    }
  });
</script>
