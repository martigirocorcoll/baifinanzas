<div class="container py-5">
  <h1 class="mb-4">Hola, <%= current_user.email %></h1>

  <div class="row gx-4 gy-4 mb-5">
    <!-- PYG -->
    <div class="col-12 col-md-6 col-lg-4">
      <div class="card h-100 shadow-sm">
        <div class="card-header bg-primary text-white">
          Pérdidas & Ganancias
        </div>
        <div class="card-body d-flex flex-column justify-content-center text-center">
          <% if @pyg.persisted? %>
            <p class="h5 mb-3"><strong>Ingresos:</strong> <%= number_with_delimiter(@pyg.ingresos_mensual, delimiter: ".") %> €</p>
            <%= link_to "Editar datos", edit_pyg_path, class: "btn btn-outline-primary mt-auto" %>
          <% else %>
            <p class="text-muted mb-3">Aún no has completado tus datos</p>
            <%= link_to "Completar ahora", new_pyg_path, class: "btn btn-primary mt-auto" %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Balance -->
    <div class="col-12 col-md-6 col-lg-4">
      <div class="card h-100 shadow-sm">
        <div class="card-header bg-success text-white">
          Balance
        </div>
        <div class="card-body d-flex flex-column justify-content-center text-center">
          <% if @balance.persisted? %>
            <% neto = @balance.valor_inmuebles + @balance.dinero_cuenta_corriente - @balance.hipoteca_inmuebles %>
            <p class="h5 mb-3"><strong>Patrimonio neto:</strong> <%= number_with_delimiter(neto, delimiter: ".") %> €</p>
            <%= link_to "Editar datos", edit_balance_path, class: "btn btn-outline-success mt-auto" %>
          <% else %>
            <p class="text-muted mb-3">Aún no has completado tu balance</p>
            <%= link_to "Completar ahora", new_balance_path, class: "btn btn-success mt-auto" %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Objetivos -->
    <div class="col-12 col-md-6 col-lg-4">
      <div class="card h-100 shadow-sm">
        <div class="card-header bg-warning text-dark">
          Objetivos
        </div>
        <div class="card-body d-flex flex-column justify-content-center text-center">
          <% if @objectives.any? %>
            <p class="h5 mb-3"><strong><%= @objectives.count %></strong> objetivos definidos</p>
            <%= link_to "Ver todos", objectives_path, class: "btn btn-outline-warning mt-auto" %>
          <% else %>
            <p class="text-muted mb-3">No tienes objetivos aún</p>
            <%= link_to "Crear objetivo", new_objective_path, class: "btn btn-warning mt-auto" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Aquí puedes añadir un gráfico o resumen avanzado -->
</div>
