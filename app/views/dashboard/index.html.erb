<% content_for :title, "Dashboard - Baifinanzas" %>

<div class="dashboard-section">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-xl-10">
      
      <% case @user_state %>
      <% when :new_user %>
        <!-- ESTADO 1: USUARIO NUEVO -->
        <%= render 'dashboard/states/new_user' %>
        
      <% when :has_pyg %>
        <!-- ESTADO 2: USUARIO CON P&L -->
        <%= render 'dashboard/states/has_pyg' %>
        
      <% when :complete %>
        <!-- ESTADO 3: USUARIO COMPLETO -->
        <%= render 'dashboard/states/complete' %>
        
      <% end %>
      
      </div>
    </div>
  </div>
</div>

<!-- Chart.js para los grÃ¡ficos -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<style>
/* BaiFinanzas Dashboard - Consistent with Landing Page Design */

.dashboard-section {
  background: #F4F4F4;
  padding: 2rem 0;
}

.dashboard-card {
  background: white;
  border: 1px solid #e9ecef;
  border-radius: 0.5rem;
  box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  margin-bottom: 1.5rem;
}

.dashboard-card:hover {
  transform: scale(1.02);
  box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
}

.financial-health-display {
  background: rgba(34, 197, 94, 0.1);
  border: 1px solid rgba(34, 197, 94, 0.2);
  border-radius: 0.5rem;
  padding: 2rem;
  text-align: center;
  margin-bottom: 2rem;
}

.financial-health-display h2 {
  color: #16a34a;
  font-family: "Nunito", "Helvetica", "sans-serif";
  font-size: 2rem;
  font-weight: 700;
  margin-bottom: 0.5rem;
}

.stats-card {
  background: white;
  border: 1px solid #e9ecef;
  border-radius: 0.5rem;
  padding: 1.5rem;
  text-align: center;
  transition: all 0.3s ease;
}

.stats-card:hover {
  border-color: #0D6EFD;
  transform: translateY(-2px);
}

.stats-icon {
  width: 48px;
  height: 48px;
  background: #0D6EFD;
  border-radius: 0.5rem;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 1rem;
}

.stats-icon i {
  color: white;
  font-size: 1.5rem;
}

.progress-indicator {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 1rem;
  background: rgba(13, 110, 253, 0.05);
  border-radius: 0.5rem;
  margin-bottom: 1rem;
}

.progress-icon {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1rem;
}

.progress-icon.completed {
  background: #1EDD88;
  color: white;
}

.progress-icon.pending {
  background: #FFC65A;
  color: white;
}

.ranking-display {
  background: rgba(255, 198, 90, 0.1);
  color: #FFC65A;
  padding: 0.75rem 1.5rem;
  border-radius: 0.5rem;
  font-weight: 600;
  display: inline-block;
  margin: 1rem 0;
  border: 1px solid rgba(255, 198, 90, 0.3);
}

.chart-container {
  position: relative;
  height: 450px;
  margin: 1rem 0;
  background: white;
  border-radius: 0.5rem;
  padding: 1rem;
}

.welcome-hero {
  background: radial-gradient(116.18% 118% at 50% 100%, 
    rgba(34, 197, 94, 0.1) 0%, 
    rgba(16, 185, 129, 0.05) 41.83%, 
    rgba(241, 244, 253, 0.07) 82.52%);
  border-radius: 0.5rem;
  padding: 3rem 2rem;
  text-align: center;
  margin-bottom: 2rem;
}

.welcome-hero h1 {
  color: #0E0000;
  font-family: "Nunito", "Helvetica", "sans-serif";
  font-size: 2.5rem;
  font-weight: 700;
  margin-bottom: 1rem;
}

.benefit-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 1rem;
  margin: 2rem 0;
}

.benefit-card {
  background: white;
  border: 1px solid #e9ecef;
  border-radius: 0.5rem;
  padding: 1.5rem;
  text-align: center;
  transition: all 0.3s ease;
}

.benefit-card:hover {
  border-color: #1EDD88;
  transform: translateY(-2px);
}

.benefit-icon {
  width: 64px;
  height: 64px;
  background: #1EDD88;
  border-radius: 0.5rem;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 1rem;
}

.benefit-icon i {
  color: white;
  font-size: 2rem;
}

.form-section {
  background: white;
  border-radius: 0.5rem;
  padding: 2rem;
  box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
}

.objective-item {
  background: white;
  border: 1px solid #e9ecef;
  border-left: 4px solid #0D6EFD;
  border-radius: 0.5rem;
  padding: 1.5rem;
  margin-bottom: 1rem;
  transition: all 0.3s ease;
}

.objective-item:hover {
  border-left-color: #1EDD88;
  transform: translateX(4px);
}

.recommendation-tag {
  background: rgba(13, 110, 253, 0.1);
  color: #0D6EFD;
  padding: 0.25rem 0.75rem;
  border-radius: 0.25rem;
  font-size: 0.875rem;
  display: inline-block;
  margin: 0.25rem 0;
}

.status-positive {
  color: #1EDD88;
  font-weight: 600;
}

.status-negative {
  color: #FD1015;
  font-weight: 600;
}

.btn-baifinanzas {
  background: #0D6EFD;
  border: none;
  color: white;
  padding: 0.75rem 2rem;
  border-radius: 0.5rem;
  font-weight: 600;
  transition: all 0.3s ease;
}

.btn-baifinanzas:hover {
  background: #0b5ed7;
  transform: translateY(-1px);
  color: white;
}

.btn-baifinanzas-success {
  background: #1EDD88;
  border: none;
  color: white;
  padding: 0.75rem 2rem;
  border-radius: 0.5rem;
  font-weight: 600;
  transition: all 0.3s ease;
}

.btn-baifinanzas-success:hover {
  background: #16a34a;
  transform: translateY(-1px);
  color: white;
}

@media (max-width: 768px) {
  .dashboard-section {
    padding: 1rem 0;
  }
  
  .chart-container {
    height: 350px;
  }
  
  .welcome-hero h1 {
    font-size: 2rem;
  }
  
  .welcome-hero {
    padding: 2rem 1rem;
  }
  
  .benefit-grid {
    grid-template-columns: 1fr;
    gap: 1rem;
  }
  
  .form-section {
    padding: 1.5rem;
  }
}
</style>