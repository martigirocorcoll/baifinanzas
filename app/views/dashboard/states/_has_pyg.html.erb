<!-- ESTADO 2: USUARIO CON P&L -->
<!-- Información de análisis inicial (sin fondo) -->
<div class="text-center py-4 mt-4">
  <h2><%= t('views.dashboard.has_pyg.analysis_title') %></h2>
  <p class="lead mb-3">
    <strong class="<%= @monthly_cash_flow > 0 ? 'text-success' : 'text-danger' %>">
    <%= number_with_delimiter(@monthly_cash_flow, delimiter: ".") %> €</strong> <%= t('views.dashboard.has_pyg.available_monthly') %>
  </p>

  <% if @spain_comparison.present? %>
  <div class="row justify-content-center mt-3 mb-4">
    <div class="col-md-8">
      <div class="text-muted mb-2"><i class="bi bi-bar-chart text-primary me-2"></i><strong><%= t('views.dashboard.has_pyg.spain_comparison') %></strong></div>
      <div class="small">
        • <%= t('views.dashboard.has_pyg.income_comparison') %> <strong class="<%= @spain_comparison[:income_diff] > 0 ? 'text-success' : 'text-warning' %>">
        <%= @spain_comparison[:income_diff].abs %>% <%= @spain_comparison[:income_diff] > 0 ? t('views.dashboard.has_pyg.above') : t('views.dashboard.has_pyg.below') %></strong>
        <%= t('views.dashboard.has_pyg.of_median') %> (€<%= number_with_delimiter(@spain_comparison[:spain_median_income], delimiter: ".") %>)
        <br>
        <% if @spain_comparison[:savings_diff] %>
        • <%= t('views.dashboard.has_pyg.savings_comparison') %> <strong class="<%= @spain_comparison[:savings_diff] > 0 ? 'text-success' : 'text-warning' %>">
        <%= @spain_comparison[:savings_diff].abs %>% <%= @spain_comparison[:savings_diff] > 0 ? t('views.dashboard.has_pyg.superior') : t('views.dashboard.has_pyg.inferior') %></strong>
        (€<%= @spain_comparison[:spain_median_savings] %>)
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
</div>

<!-- Título principal con fondo (welcome-hero) -->
<div class="welcome-hero">
  <h1><i class="bi bi-rocket-takeoff text-primary me-2"></i><%= t('views.dashboard.has_pyg.complete_analysis_title') %></h1>
  <p class="lead mb-0">
    <%= t('views.dashboard.has_pyg.complete_analysis_subtitle') %>
  </p>
</div>

